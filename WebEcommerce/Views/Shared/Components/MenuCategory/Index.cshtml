@model IEnumerable<WebEcommerce.ViewModels.MenuCategoryVM>


<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh Mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var i in Model)
            {
                
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Product" asp-action="Index" asp-route-id="@i.Id">
                            <i class="fas fa-apple-alt me-2"></i>@i.Name
                        </a>
                    </div>
                </li>
            }
            
        </ul>
    </div>
</div>