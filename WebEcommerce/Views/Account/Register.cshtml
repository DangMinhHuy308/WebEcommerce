@model WebEcommerce.ViewModels.RegisterVM
@{
	ViewData["title"] = "Đăng ký";
}

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Đăng ký Thành viên</h1>
		<form asp-action="Register" enctype="multipart/form-data">
			<div class="row mb-2">
				<div class="col-9">
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.LastName"></label><sup>*</sup>
						<input asp-for="@Model.LastName" class="form-control" />
						<span asp-validation-for="@Model.LastName" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.FirstName"></label><sup>*</sup>
						<input asp-for="@Model.FirstName" class="form-control" />
						<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.UserName"></label><sup>*</sup>
						<input asp-for="@Model.UserName" class="form-control" />
						<span asp-validation-for="@Model.UserName" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
						<input type="password" asp-for="Password" class="form-control" autocomplete="new-password" />
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>
					
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
						<input asp-for="@Model.Address" class="form-control" />
						<span asp-validation-for="@Model.Address" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.PhoneNumber"></label><sup>*</sup>
						<input asp-for="@Model.PhoneNumber" class="form-control" />
						<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
						<input asp-for="@Model.Email" class="form-control" />
						<span asp-validation-for="@Model.Email" class="text-danger"></span>
					</div>

					
					<div class="form-check my-3">
						<input asp-for="@Model.Gender" class="form-check-input">
						<label class="form-check-label" for="GioiTinh">Nam?</label>
					</div>
				</div>
				<div class="col-3">
					<div class="mb-2">
						<img src="~/thumbnails/1077596-200.png" class="img-fluid" id="thumbnail" />
					</div>
					<div class="mb-2">
						<label>Thumbnail</label>
						<input type="file" asp-for="Thumbnail" class="custom-file" />
						<span asp-validation-for="Image" class="text-danger"></span>
					</div>
				</div>
				<div class="row g-4 text-center align-items-center justify-content-center pt-4">
					<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>
		$(".custom-file").on("change", function () {
			var fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
			document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
		});
	</script>
}