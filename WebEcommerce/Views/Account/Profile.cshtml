@model WebEcommerce.ViewModels.ProfileVM

@{
	ViewData["title"] = "Thông tin cá nhân";
}

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Thông tin cá nhân</h1>
		<form asp-action="Profile" enctype="multipart/form-data">
			<div class="row mb-2">
				<div class="col-9">
					<div class="form-item">
						<label class="form-label my-3">Họ</label><sup>*</sup>
						<input asp-for="@Model.LastName" class="form-control" />
						<span asp-validation-for="@Model.LastName" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3" >Tên</label><sup>*</sup>
						<input asp-for="@Model.FirstName" class="form-control" />
						<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3">Địa chỉ</label><sup>*</sup>
						<input asp-for="@Model.Address" class="form-control" />
						<span asp-validation-for="@Model.Address" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3">SDT</label><sup>*</sup>
						<input asp-for="@Model.PhoneNumber" class="form-control" />
						<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" >Email</label><sup>*</sup>
						<input asp-for="@Model.Email" class="form-control" />
						<span asp-validation-for="@Model.Email" class="text-danger"></span>
					</div>


					<div class="form-check my-3">
						<input asp-for="@Model.Gender" class="form-check-input">
						<label class="form-check-label" for="GioiTinh">Nam</label>
					</div>
				</div>
				<div class="col-3">
					
					<div class="mb-2">
						@{
							if (Model.Image == null)
							{
								<img src="~/thumbnails/1077596-200.png" class="img-fluid" id="thumbnail" />
							}

							else
							{
								<img src="~/thumbnails/@Model.Image" class="img-fluid" id="thumbnail" />

							}
						}
					</div>
					<div class="mb-2">
						<label>Image</label>
						<input type="file" asp-for="Thumbnail" class="custom-file" />
						<span asp-validation-for="Image" class="text-danger"></span>
					</div>
				</div>
				<div class="row g-4 text-center align-items-center justify-content-center pt-4">
					<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Cập nhập</button>
				</div>
			</div>
		</form>
	</div>
</div>