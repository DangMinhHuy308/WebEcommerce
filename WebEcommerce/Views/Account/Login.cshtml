@model WebEcommerce.ViewModels.LoginVM


<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Đăng ký Thành viên</h1>
		<form asp-action="Login" enctype="multipart/form-data">
			<div class="row mb-2">
				<div class="col-9">
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Username"></label><sup>*</sup>
						<input asp-for="@Model.Username" class="form-control" />
						<span asp-validation-for="@Model.Username" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
						<input type="password" asp-for="Password" class="form-control" autocomplete="new-password" />
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<div class="custom-control custom-checkbox small">
							<input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
							<label class="custom-control-label" for="customCheck">
								Remember
								Me
							</label>
						</div>
					</div>
				<div class="row g-4 text-center align-items-center justify-content-center pt-4">
					<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
				</div>
			</div>
		</form>
	</div>
</div>