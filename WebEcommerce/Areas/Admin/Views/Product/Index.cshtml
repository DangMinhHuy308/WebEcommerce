@using X.PagedList
@using X.PagedList.Mvc.Core
@using System.Globalization
@model IPagedList<WebEcommerce.ViewModels.ProductVM>
@{
    ViewData["Title"] = "List Of Products";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Product" asp-area="Admin">Thêm sản phẩm</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">List of Products</h4>
        </div>
        <div class="card-body" style="background-color: lightgray;">
            @foreach (var i in Model)
            {
                <div class="rounded mb-4 bg-white p-2">
                    <div class="row">
                        <div class="col-2 d-flex justify-content-center align-items-center">
                            @if (i.Image == null)
                            {
                                <img class="img-fluid" src="~/thumbnails/1077596-200.png" style="object-fit:cover; height:100%; width:100%">
                            }
                            else
                            {
                                <img class="img-fluid" src="~/thumbnails/@i.Image" style="object-fit:cover; height:100%; width:100%">
                            }
                        </div>

                        <div class="col-4 d-flex flex-column justify-content-center">
                            <h5 class="text-primary fw-bold mb-1">@i.Name</h5>
                            <p class="text-muted mb-1">Category: @i.CategoryName</p>
                        </div>

                        <div class="col-3 d-flex flex-column justify-content-center">
                            <p class="mb-1">Ngày tạo: @i.CreatedDate.ToString("dd/MM/yyyy")</p>
                            <p class="mb-1 text-success">Giá tiền: @WebEcommerce.Common.Common.FormatNumber(i.Price,0)đ</p>
                        </div>

                        <div class="col-3 d-flex justify-content-end align-items-center">
                            <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@i.Id">Edit</a>|
                            <form asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@i.Id" method="post" onsubmit="return confirm('Do you want to delete this product?')">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer">
            Page @(Model?.PageCount < Model?.PageNumber ? 0 : Model?.PageNumber) of @Model?.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
                     new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
                     new PagedListRenderOptions()
            {
                ContainerDivClasses = new List<string> { "blog", "navigation" },
                UlElementClasses = new List<string> { "pagination" },
                LiElementClasses = new List<string> { "page-item", "page-link" },
                ActiveLiElementClass = "active",
            })
        </div>
    </div>
</div>
