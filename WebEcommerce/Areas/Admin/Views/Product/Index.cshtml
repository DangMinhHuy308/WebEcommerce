@using X.PagedList
@using X.PagedList.Mvc.Core
@using System.Globalization
@model IPagedList<WebEcommerce.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Product" asp-area="Admin">Thêm sản phẩm</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Danh sách sản phẩm</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Mô tả</th>
                        <th>Ngày tạo</th>
                        <th>Giá tiền</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>
                                <img class="img-fluid" src="~/thumbnails/@i.Image" style="width: 70px; height: 70px; object-fit: cover;">
                            </td>
                            <td>@i.Name</td>
                            <td>@i.CategoryName</td>
                            <td>@Html.Raw(@i.Description)</td>
                            <td>@i.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@WebEcommerce.Common.Common.FormatNumber(i.Price, 0)đ</td>
                            <td class="action-buttons">
                                <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@i.Id">Edit</a>|
                                <form class="d-inline" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@i.Id" method="post" onsubmit="return confirm('Do you want to delete this product?')">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer">
            Page @(Model?.PageCount < Model?.PageNumber ? 0 : Model?.PageNumber) of @Model?.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
                     new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
                     new PagedListRenderOptions()
            {
                ContainerDivClasses = new List<string> { "product", "navigation" },
                UlElementClasses = new List<string> { "pagination" },
                LiElementClasses = new List<string> { "page-item", "page-link" },
                ActiveLiElementClass = "active",
            })
        </div>
    </div>
</div>
