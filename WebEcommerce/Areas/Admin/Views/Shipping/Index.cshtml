@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<WebEcommerce.ViewModels.ShippingVM>
@{
    ViewData["Title"] = "Danh sách khu vực vẩn chuyển";
}
<style>
    .action-buttons {
        display: flex;
        gap: 10px; /* Adds spacing between the buttons */
        align-items: center; /* Ensures vertical alignment */
    }

        .action-buttons .btn {
            min-width: 70px; /* Ensures both buttons have the same width */
            text-align: center; /* Centers text in the button */
        }
</style>
<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Shipping" asp-area="Admin">Thêm khu vực vận chuyển</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Danh sách khu vực vận chuyển</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Mô tả</th>
                        <th>Ngày tạo</th>
                        <th>Ngày hạn</th>
                        <th>Tiền</th>
                        <th>Số lượng </th>
                        <th>Tình trạng</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>

                            <td>@i.Ward</td>
                            <td>@i.District</td>
                            <td>@i.City</td>
                            <td>@WebEcommerce.Common.Common.FormatNumber(i.Price, 0)đ</td>
                            
                            <td class="action-buttons">
                                <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Shipping" asp-action="Edit" asp-route-id="@i.Id">Edit</a> |
                                <form class="d-inline" asp-area="Admin" asp-controller="Shipping" asp-action="Delete" asp-route-id="@i.Id" method="post" onsubmit="return confirm('Do you want to delete this coupon?')">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            Page @(Model?.PageCount < Model?.PageNumber ? 0 : Model?.PageNumber) of @Model?.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
                     new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
                     new PagedListRenderOptions()
            {
                ContainerDivClasses = new List<string> { "shipping", "navigation" },
                UlElementClasses = new List<string> { "pagination" },
                LiElementClasses = new List<string> { "page-item", "page-link" },
                ActiveLiElementClass = "active",

            })
        </div>
    </div>
</div>