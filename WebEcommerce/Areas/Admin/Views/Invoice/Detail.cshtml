@model WebEcommerce.ViewModels.InvoiceDetailVM

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}


<div class="container-fluid">

    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Hóa đơn chi tiết</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá tiền</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Code</td>
                        <td>@Model.ProductName</td>
                        <td>@WebEcommerce.Common.Common.FormatNumber(Model.Price, 0)đ</td>
                        <td>@Model.Quantity</td>

                    </tr>

                    

               </tbody>
            </table>
        </div>
        <a asp-action="Index" asp-controller="Invoice" asp-area="Admin" class="btn btn-primary" style="width:10%">Quay lại danh sách hóa đơn</a>

        
    </div>
</div>
